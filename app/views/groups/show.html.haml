-title = "Showing Group #{@group}"
-meta title: title
-cache ['v1', admin?,  @group] do
  .entity-outer
    .entity
      .entity-inner
        %header
          %h1#page-title{tabindex: -1}=title
        %table.entity-table
          %caption.sr-only Key value pairs for this group
          %tbody
            %tr
              %th{scope: "row"}
                Title:
              %td
                = @group.title
        %nav.show-nav{role:"navigation"}
          %ul.list-inline
            %li
              = link_to groups_path, class: 'btn btn-info', title: "View the groups index" do
                
                Groups
            %li
              = link_to edit_group_path(@group), title: "Edit this group", class: 'btn btn-primary' do
                Edit
